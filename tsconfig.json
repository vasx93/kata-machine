{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": "src",
        "paths": {
            "@code/*": ["day1/*"]
        }
    },
    "files": ["./src/global.d.ts"], // in order to reference global types
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
